<%= render "layouts/banner" %>

  <h1>List of cocktails:</h1>
  <div class="card-container">

  <% @cocktails.each do |cocktail| %>
    <div class="cards">
      <div class="card" style="background-image: url(<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>)">
        <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
      </div>
    </div>
  <% end %>
</div>
