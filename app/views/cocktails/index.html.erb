<div class="container">
  <div class="row d-flex justify-content-center m-5">
    <div class="col-12">
      <%= link_to new_cocktail_path do %> <i class="fas fa-cocktail"></i> Create a new Cocktail <% end %>

      <h1>List of cocktails:</h1>

      <% @cocktails.each do |cocktail| %>
      <div class="col-6">
        <li class="m-2">
          <div class="card-trip">
            <%= cl_image_tag cocktail.photo, height: 150, width: 200, crop: :fill %>
          <div class="card-trip-infos">
            <div>
              <%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>
              <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
              <p>
                <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure ?"} do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </p>
            </div>
              <h2 class="card-trip-pricing">Â£99.99</h2>
              <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
              <% end %>
            </div>
          </div>
        </li>
      </div>
    </div>
  </div>
</div>
