<div class="container">
  <div class="row d-flex justify-content-center m-5">
    <div class="col-12">
      <%= simple_form_for @cocktail do |c| %>
        <%= c.input :name %>
        <%= c.input :photo %>
        <%= c.input :photo_cache, as: :hidden %>
        <%= c.full_error :token %>
        <%= c.submit 'Update', class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
